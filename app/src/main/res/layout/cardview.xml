<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="5dp"
    card_view:contentPadding="16dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardMaxElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/VolleyImageView"
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/ic_launcher"
            tools:ignore="MissingClass" />

        <TextView
            android:id="@+id/IID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check"
            android:visibility="gone" />

        <TextView
            android:id="@+id/ImageNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="16dp"
            android:text="JSon Image Name"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <!-- Adjusted margins for better spacing -->

        <TextView
            android:id="@+id/Imagetype"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/VolleyImageView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="85dp"
            android:layout_marginTop="10dp"
            android:text="JSon type"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Imagesize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Imagetype"
            android:layout_marginLeft="16dp"
            android:visibility="gone"
            android:layout_toRightOf="@+id/VolleyImageView"
            android:text="JSon size"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:textStyle="bold"  />

        <TextView
            android:id="@+id/Imagepack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Imagesize"
            android:visibility="gone"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/VolleyImageView"
            android:text="JSon pack"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:textStyle="bold"  />

        <TextView
            android:id="@+id/Imageprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@+id/Imagepack"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/VolleyImageView"
            android:text="JSon prize"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <!-- Removed unnecessary TextView -->

    </RelativeLayout>

</androidx.cardview.widget.CardView>
